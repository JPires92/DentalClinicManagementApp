@model IEnumerable<DentalClinicManagementApp.Models.PostalCode>

@{
    ViewData["Title"] = "Index";
}

<h1>@SharedLocalizer["Postal Codes"]</h1>

<p>
    <a asp-action="Create">@SharedLocalizer["Create New"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ZipCode">@SharedLocalizer["Edit"]</a> |
                <a asp-action="Details" asp-route-id="@item.ZipCode">@SharedLocalizer["Details"]</a> |
                <a asp-action="Delete" asp-route-id="@item.ZipCode">@SharedLocalizer["Delete"]</a>
            </td>
        </tr>
    }
    </tbody>
</table>
