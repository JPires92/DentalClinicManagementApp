@using Microsoft.AspNetCore.Localization;
@using Microsoft.Extensions.Options;

@inject IOptions<RequestLocalizationOptions> LocOptions;

@{
    //Cultura do pedido
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();

    //Culturas suportadas, '!' : diz que variavél vai ter valores
    var cultureItems = LocOptions.Value.SupportedUICultures!
                        .Select(c => new SelectListItem { Value = c.Name, Text = c.DisplayName })
                        .ToList();
}

<ul class="navbar-nav select-language">
    <li class="nav-item">
        <form id="selectLanguage" asp-controller="Home" asp-action="SetLanguage" asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)" 
        method="post" class="form-horizontal row" role="form">

            <div class="col-md-6 text-end">
                &bull;Language
            </div>

            <div class="col-md-6">
                <select class="form-control" name="culture" onchange="this.form.submit();"
                asp-for="@requestCulture!.RequestCulture.UICulture.Name" asp-items="cultureItems"></select>
            </div>
        </form>
    </li>
</ul>